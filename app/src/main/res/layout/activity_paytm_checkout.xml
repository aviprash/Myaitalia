<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.PaytmCheckoutActivity">
    
    <ImageView
        android:id="@+id/img_paytm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/paypal_logo"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/txt_cart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_paytm"
        android:layout_marginTop="50dp"
        android:text="Your Cart Id Is :"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/txt_cart_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_cart_title"
        android:layout_marginTop="10dp"
        android:text="000000"
        android:textColor="@color/solid_three"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_total_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_cart_id"
        android:layout_marginTop="10dp"
        android:text="Your Total Is :"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_total_title"
        android:layout_marginTop="10dp"
        android:text="â‚¬0"
        android:textColor="@color/solid_one"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_phn_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_total"
        android:layout_marginTop="10dp"
        android:text="Kindly Pay This Amount To:"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txt_phn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_phn_title"
        android:layout_marginTop="10dp"
        android:autoLink="web"
        android:text="paypal.me/aviprash95"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/btn_temp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
</ScrollView>