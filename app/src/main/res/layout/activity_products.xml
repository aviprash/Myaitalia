<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.ProductsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/txt_prd_count"

        >

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/txt_prd_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_above="@id/btn_goto_checkout"
        android:text="Item Selected: 0"
        android:textAlignment="center"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/btn_goto_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/button_horz_margin"
        android:background="@drawable/text_border_fill"
        android:text="View Cart"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"

        />
</RelativeLayout>