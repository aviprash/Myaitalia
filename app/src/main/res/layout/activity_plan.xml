<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.PlanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_normal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="true"
            android:onClick="onClick"
            >

            <RelativeLayout
                android:background="@color/solid_two"
                android:elevation="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="15dp"
                    android:text="NORMAL PLAN"
                    android:textColor="@color/grey_600"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="10dp"
                    android:layout_below="@id/txt_normal"
                    android:src="@drawable/calender"
                    android:padding="10dp"
                    />

                <Button
                    android:id="@+id/btn_about_normal"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/white_round_corners"
                    android:onClick="onClick"
                    android:backgroundTint="@color/solid_three"
                    android:text="About"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_elite"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/card_normal"
            app:cardCornerRadius="10dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="50dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true"
            android:onClick="onClick"
            >

            <RelativeLayout
                android:background="@color/solid_two"
                android:elevation="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/txt_elite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="15dp"
                    android:text="ELITE PLAN"
                    android:textColor="@color/grey_600"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@id/txt_elite"
                    android:layout_margin="10dp"
                    android:src="@drawable/shield"
                    android:padding="10dp"
                    />

                <Button
                    android:id="@+id/btn_about_elite"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/white_round_corners"
                    android:backgroundTint="@color/solid_three"
                    android:text="About"
                    android:onClick="onClick"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/card_elite"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:elevation="20dp"
            android:backgroundTint="@color/solid_one"
            android:background="@drawable/black_round_corners"
            android:src="@drawable/cart"
            android:padding="30dp"
            android:onClick="onClick"
            />
    </RelativeLayout>
</ScrollView>